@model CartModel


    @if (Model.CartItems.Count == 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-warning">
                    Səbətinizdə məhsul yoxdur!
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="text-left">
                    <h4>Səbət Məlumatları</h4>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Məhsul adı</th>
                            <th>Qiymət</th>
                            <th>Say</th>
                            <th>Toplam</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>
                                    <img src="~/img/@item.ImageUrl" width="80" alt="">
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                                <td>@(item.Quantity*item.Price)</td>
                                <td>
                                    <form asp-controller="Cart" asp-action="DeleteFromCart" method="post">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fa fa-times fa-fw"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-md-4">
                <div class="text-left">
                    <h4>Yekun Məbləğ</h4>
                </div>
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Kargo</th>
                            <th>Ödənişsiz</th>
                        </tr>
                        <tr>
                            <th>Sifarişlərin Toplamı</th>
                            <th>@Model.TotalPrice().ToString() AZN</th>
                        </tr>
                    </tbody>
                </table>
                <div class="text-center">
                    <a href="/" class="btn btn-primary">
                        <i class="fa fa-arrow-circle-left fa-fw"></i>Alış Verişə Davam Et.
                    </a>

                    <a href="/checkout" class="btn btn-primary">
                        <i class="fa fa-arrow-circle-right fa-fw"></i>Ödəniş Et.
                    </a>
                </div>
            </div>
        </div>
    }



